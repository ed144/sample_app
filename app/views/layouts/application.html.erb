<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
   <%= render 'layouts/shim' %>
</head>
<body>

    <%= render 'layouts/header' %>

    <div class="container">

      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "alert alert-#{key}") %>
      <% end %>

       <%= yield %>
      <%= render 'layouts/footer' %>

      <%= debug(params) if Rails.env.development? %>

      <%= debug("host=#{request.host}\n ip=#{request.ip}\n format=#{request.format}\n method=#{request.method}\n headers=#{request.headers}\n port=#{request.port}\n protocol=#{request.protocol}\n query_string=#{request.query_string}\n remote_ip=#{request.remote_ip}\n url=#{request.url}") if Rails.env.development? %>



    </div>
</body>
</html>
